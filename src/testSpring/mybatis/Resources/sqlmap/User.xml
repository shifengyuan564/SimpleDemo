<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="testSpring.mybatis.dao.UserDao">

    <!--订单信息 结果集-->
    <resultMap id="userCustomResultMap" type="testSpring.mybatis.domain.OrdersCustom">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="createtime" property="createtime" jdbcType="DATE"/>
        <result column="note" property="note" jdbcType="VARCHAR"/>
    </resultMap>

    <!--使用了typeAlias，所以resultType可以直接写UserCustom-->
    <select id="findUserById" parameterType="int" resultType="UserCustom">
		SELECT * FROM USER WHERE id = #{value}
	</select>

    <!--_parameter可以获得传入的任意类型参数值 -->
    <select id="selectAllOrdersByUserId" parameterType="int" resultMap="userCustomResultMap">
        SELECT id, createtime, note FROM orders
        <where>
            1 = 1
            <if test="_parameter != null">
                AND user_id = #{id, jdbcType=BIGINT}
            </if>
            AND id <![CDATA[>]]> 0
        </where>
        ORDER BY createtime ASC
    </select>

    <insert id="addUserCorrect" parameterType="UserCustom">

        INSERT INTO USER (
            username,
            birthday,
            sex,
            address
        )
        VALUES (
            #{username, jdbcType=VARCHAR},
            #{birthday, jdbcType=DATE},
            #{sex, jdbcType=VARCHAR},
            #{address, jdbcType=VARCHAR}
        )

        <selectKey resultType="INTEGER" keyProperty="id">
            SELECT LAST_INSERT_ID();
        </selectKey>
    </insert>

    <insert id="addUserFail" parameterType="UserCustom">

        INSERT INTO USER (
        asdfasdfasdfasdfasdfasdfasdf,
        username,
        birthday,
        sex,
        address
        )
        VALUES (
        #{username, jdbcType=VARCHAR},
        #{birthday, jdbcType=DATE},
        #{sex, jdbcType=VARCHAR},
        #{address, jdbcType=VARCHAR}
        )

        <selectKey resultType="INTEGER" keyProperty="id">
            SELECT LAST_INSERT_ID();
        </selectKey>
    </insert>

</mapper>


